<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="city"
            type="com.aavidsoft.recyclerview02.models.City" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            image_resource="@{city.imageResourceId}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/imgCity"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            uppercase_text="@{city.title}"
            android:textSize="24sp"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toTopOf="@id/imgCity"
            app:layout_constraintBottom_toBottomOf="@id/imgCity"
            app:layout_constraintLeft_toRightOf="@id/imgCity"
            android:id="@+id/txtCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{String.valueOf(city.population)}"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtCityName"
            app:layout_constraintLeft_toLeftOf="@id/txtCityName"
            android:id="@+id/txtCityPopulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>